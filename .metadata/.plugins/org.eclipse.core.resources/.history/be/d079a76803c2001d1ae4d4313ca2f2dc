<!-- 게시글 -->
<div class="row mt-4">
	<div class="col-md-10 offset-md-1">
		<table class="table table-hover">
			<thead class="bg-dark text-light text-center">
			<!-- 랜덤으로 나온 정답플레이어 -->
			
			<c:if test="${playCount == 5 }"> 
    			
    				<td> 정답</td>
    		
               		<tr>
						<td>${answer.name}</td>
						<td>${answer.shirt}</td>
						<td>${answer.pos}</td>
						<td>${answer.team}</td>
						<td>${answer.age}</td>
					</tr>
       
       		 </c:if>
			

<!--    사용자가 입력한 플레이어 -->
		
 
 <c:forEach var="answerAll" items="${answerAll}">
 
	    		<th>${answerAll.name}</th>
	    				<c:choose> 
							<c:when test="${answerAll.shirt == answer.shirt}">
								<c:set var = "answer" value="${answer}" />
								<c:choose>
									<c:when test="${answerAll.shirt lt answer.shirt }">
									<td style = "background-color:green">${answerAll.shirt}입력이 더 작아</td>
									</c:when>
									<c:otherwise test="${answerAll.shirt gt answer.shirt }">
									<td style = "background-color:green">${answerAll.shirt}입력이 더 커</td>
									</c:otherwise>
								</c:choose>
							</c:when> 
							
							<c:otherwise test="${answerAll.shirt != answer.shirt}">
								<td style = "background-color:grey">${answerAll.shirt}</td>
							</c:otherwise> 
						</c:choose>
						<c:choose>
							<c:when test="${answerAll.pos == answer.pos}">
								<td style = "background-color:green">${answerAll.pos}</td>
							</c:when> 
							
							<c:when test="${answerAll.pos != answer.pos}">
								<td style = "background-color:grey">${answerAll.pos}</td>
							</c:when> 
								</c:choose> 
								<c:choose>
							<c:when test="${answerAll.team == answer.team}">
								<td style = "background-color:green">${answerAll.team}</td>
							</c:when> 
							
							<c:when test="${answerAll.team != answer.team}">
								<td style = "background-color:grey">${answerAll.team}</td>
							</c:when> 
								</c:choose> 
								<c:choose>
							<c:when test="${answerAll.age == answer.age}">
								<td style = "background-color:green">${answerAll.age}</td>
							</c:when> 
							
							<c:when test="${answerAll.age != answer.age}">
								<td style = "background-color:grey">${answerAll.age}</td>
							</c:when> 
							
						</c:choose> 
						</tr>
				</c:forEach>
			</body>